<!DOCTYPE html>
<html>
<head>
  <title>Gorilla</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <h3>Gorilla</h3>
    <div id="header_links">
      <%= yield :links %>
    </div>
  </header>
  <div class="notification">
    <% if notice %>
      <div data-order="0" class="success"><%= notice %></div>
    <% end %>
    <% if alert %>
      <div data-order="0" class="warning"><%= alert %></div>
    <% end %>
  </div>
  <article>
    <%= yield %>
    <div style="clear:both"></div>
  </article>
  <% if user_signed_in? %>
    <footer>
      <div id="user_nav">
        Signed in as: <%= current_user.email %>.
        <%= link_to "Sign out", destroy_user_session_path, 
                                method: "DELETE",
                                id: :top_nav_sign_out %>
      </div>
    </footer>
  <% end %>
</body>
</html>

